[Unit]
Description=VIC Unified Installer Web Server
Documentation=https://github.com/vmware/vic-product
After=vic-appliance-ready.target fileserver_startup.service
Requires=vic-appliance-ready.target

[Service]
Type=simple
Restart=on-failure
RestartSec=5
ExecStartPre=-/usr/bin/docker kill vic-appliance-landing
ExecStartPre=-/usr/bin/docker rm -f vic-appliance-landing
ExecStart=/etc/vmware/fileserver/start_fileserver.sh

[Install]
WantedBy=multi-user.target
